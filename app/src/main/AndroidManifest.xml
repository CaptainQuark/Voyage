<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thomas.voyage">

    <uses-library
        android:name="com.google.android.wearable"
        android:required="false" />

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/VoyageDark">
        <activity
            android:name=".BasicActivities.StartActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BasicActivities.HeroesPartyActivity"
            android:label="@string/title_activity_heroes_party"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".BasicActivities.MerchantHeroActivity"
            android:label="@string/title_activity_merchant"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".CombatActivities.WorldMapQuickCombatActivity"
            android:label="@string/title_activity_screen_slide"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".CombatActivities.CombatActivity"
            android:label="@string/title_activity_combat"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".CombatActivities.PrepareCombatActivity"
            android:label="@string/title_activity_combat_white"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".BasicActivities.MerchantInventoryActivity"
            android:label="@string/title_activity_merchant_inventory"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".CombatActivities.QuickCombatActivity"
            android:label="@string/title_activity_quick_combat"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".CombatActivities.QuickCombatCricketActivity"
            android:label="@string/title_activity_quick_combat_cricket"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".CombatActivities.QuickCombatClassicActivity"
            android:label="@string/title_activity_quick_combat_classic"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".BasicActivities.WearMessageTestActivity"
            android:label="@string/title_activity_wear_message_test" />
        <activity
            android:name=".CombatActivities.QuickCombatShanghaiActivity"
            android:label="@string/title_activity_quick_combat_shanghai"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Fragments.ClassicVersusFragment"
            android:label="@string/title_activity_classic_versus_fragment" />
        <activity
            android:name=".BasicActivities.HeroCampActivity"
            android:label="@string/title_activity_hero_camp"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".BasicActivities.HospitalActivity"
            android:label="@string/title_activity_hospital_acitivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".CombatActivities.CombatMonsterHeroActivity"
            android:label="@string/title_activity_combat_monster_hero"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".BasicActivities.NewMerchantHeroActivity"
            android:label="@string/title_activity_new_merchant_hero"
            android:screenOrientation="sensorLandscape"></activity>
    </application>

</manifest>
