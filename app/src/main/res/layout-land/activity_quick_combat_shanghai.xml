<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_gray_background"
    tools:context="com.example.thomas.voyage.CombatActivities.QuickCombatShanghaiActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/cricket_indication_bar_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/cricket_indication_bar_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@android:color/holo_red_dark"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shanghai_name_player_1"
                android:text="spieler 1"
                android:textColor="@android:color/black"
                android:textSize="34sp"
                android:paddingLeft="@dimen/cricket_values_in_titelbar"
                android:gravity="center_vertical|bottom"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/shanghai_score_player_1"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:paddingStart="@dimen/cricket_values_in_titelbar"
                android:gravity="start"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/shanghai_throw_count"
                android:text="1."
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:paddingTop="15dp"
                android:gravity="center"
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:onClick="quickCombatShanghaiMissButton"
                    android:text="MISS"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_backbutton"
                    android:onClick="quickShanghaiBackButton" />

                <TextView
                    android:text="UNDO"
                    android:onClick="onCricketUndo"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shanghai_name_player_2"
                android:text="spieler 2"
                android:textColor="@android:color/black"
                android:textSize="34sp"
                android:paddingRight="@dimen/cricket_values_in_titelbar"
                android:gravity="end|bottom"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/shanghai_score_player_2"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:paddingEnd="@dimen/cricket_values_in_titelbar"
                android:gravity="end"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:stateListAnimator="@anim/elevation"
            android:background="@drawable/ripple_backbutton"
            android:layout_centerInParent="true"
            android:layout_width="150dp"
            android:layout_height="300dp">

            <TextView
                android:text="1"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <GridLayout
                android:layout_weight="4"
                android:columnCount="2"
                android:rowCount="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:text="Test"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <TextView
                    android:text="Test"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <TextView
                    android:text="Test"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <TextView
                    android:text="Test"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <TextView
                    android:text="Test"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <FrameLayout
                    android:text="Test"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <TextView
                        android:layout_gravity="center"
                        android:background="@drawable/ripple_round_soft_grey_to_white"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </FrameLayout>



            </GridLayout>

        </LinearLayout>




    </RelativeLayout>

</LinearLayout>

