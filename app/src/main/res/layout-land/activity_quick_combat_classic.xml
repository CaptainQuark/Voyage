<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thomas.voyage.CombatActivities.QuickCombatClassicActivity"
    android:background="@color/soft_gray_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/classic_linearlayout_session_layout"
        android:visibility="gone">

        <LinearLayout
            android:background="#20010101"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <TextView
                android:text="RUNDE ALS GEIST AUFZEICHNEN"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="12sp" />

            <TextView
                android:text="RUNDE VON STATISTIK AUSSCHLIESSEN"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_marginTop="25dp"
            android:visibility="visible"
            android:id="@+id/classic_fragment_container">
        </LinearLayout>

        <LinearLayout
            android:background="#a9a9a9"
            android:orientation="horizontal"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible">

            <ImageView
                android:onClick="classicOnBackPressed"
                android:layout_weight="1"
                android:background="@drawable/ripple_backbutton"
                android:src="@mipmap/ic_backbutton"
                android:tint="@android:color/white"
                android:cropToPadding="true"
                android:scaleType="center"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:text="UNDO"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_backbutton"
                android:onClick="onClassicUndo" />

            <TextView
                android:text="MISS"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_backbutton"
                android:autoText="false"
                android:onClick="onClassicMiss" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="5.8"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/standard_background">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:id="@+id/classic_scorefield_0"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:id="@+id/classic_scorefield_1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:id="@+id/classic_scorefield_2"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:id="@+id/classic_scorefield_3"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:id="@+id/classic_scorefield_4"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:id="@+id/classic_scorefield_5"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="7"
                        android:id="@+id/classic_scorefield_6"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="8"
                        android:id="@+id/classic_scorefield_7"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="9"
                        android:id="@+id/classic_scorefield_8"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="10"
                        android:id="@+id/classic_scorefield_9"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="BULL"
                        android:id="@+id/classic_scorefield_25"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/ripple_from_darkgrey_to_black"
                        android:textColor="@android:color/white"
                        android:onClick="onClassicScoreField" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/standard_background">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="11"
                        android:id="@+id/classic_scorefield_10"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="12"
                        android:id="@+id/classic_scorefield_11"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="13"
                        android:id="@+id/classic_scorefield_12"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="14"
                        android:id="@+id/classic_scorefield_13"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="15"
                        android:id="@+id/classic_scorefield_14"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="16"
                        android:id="@+id/classic_scorefield_15"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="17"
                        android:id="@+id/classic_scorefield_16"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="18"
                        android:id="@+id/classic_scorefield_17"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="19"
                        android:id="@+id/classic_scorefield_18"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="20"
                        android:id="@+id/classic_scorefield_19"
                        android:background="@drawable/ripple_grey_to_black"
                        android:textColor="@android:color/black"
                        android:onClick="onClassicScoreField" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="EYE"
                        android:id="@+id/classic_scorefield_50"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/ripple_from_darkgrey_to_black"
                        android:textColor="@android:color/white"
                        android:onClick="onClassicScoreField" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:text="X1"
                android:gravity="center"
                android:textSize="17sp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClassicSetMultiplier"
                android:background="@android:color/black"
                android:id="@+id/classic_multi_1" />

            <TextView
                android:text="X2"
                android:gravity="center"
                android:textSize="17sp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClassicSetMultiplier"
                android:background="@android:color/black"
                android:id="@+id/classic_multi_2" />

            <TextView
                android:text="X3"
                android:gravity="center"
                android:textSize="17sp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClassicSetMultiplier"
                android:background="@android:color/black"
                android:id="@+id/classic_multi_3" />

        </LinearLayout>

    </LinearLayout>




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/classic_framelayout_choose_session_type"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/classic_relativelayout_properties_selection">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:id="@+id/classic_linearlayout_versus"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:stateListAnimator="@anim/elevation"
                android:background="@drawable/rounded_corners"
                android:src="@mipmap/monster_dummy_2"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:id="@+id/classic_linearlayout_workout"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/classic_linearlayout_versus"
                android:layout_marginRight="50dp"
                android:stateListAnimator="@anim/elevation"
                android:background="@drawable/rounded_corners"
                android:src="@mipmap/journey_b0"
                android:scaleType="centerCrop">

                <LinearLayout
                    android:background="@android:color/black"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Runden"
                        android:gravity="center"
                        android:id="@+id/textView14" />

                    <FrameLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <NumberPicker
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:descendantFocusability="blocksDescendants"
                            android:showDividers="none"
                            android:divider="@android:color/transparent"
                            android:id="@+id/quick_roundpicker_classic_workout"/>

                    </FrameLayout>

                </LinearLayout>




                <LinearLayout
                    android:background="@android:color/black"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Punkte"
                        android:gravity="center" />

                    <FrameLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <NumberPicker
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:descendantFocusability="blocksDescendants"
                            android:showDividers="none"
                            android:divider="@android:color/transparent"
                            android:id="@+id/quick_pointpicker_classic_workout"/>

                    </FrameLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="START"
                    android:gravity="center"
                    android:onClick="goToClassicWorkout"
                    android:background="@drawable/ripple_go_in_combat"
                    android:id="@+id/textView141" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:id="@+id/classic_linearlayout_historical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/classic_linearlayout_versus"
                android:layout_marginLeft="50dp"
                android:stateListAnimator="@anim/elevation"
                android:background="@drawable/rounded_corners"
                android:src="@mipmap/journey_b3"
                android:scaleType="centerCrop"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:id="@+id/classic_relativelayout_image_selection">


            <ImageButton
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:id="@+id/classic_image_versus"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:stateListAnimator="@anim/elevation"
                android:background="@drawable/rounded_corners"
                android:src="@mipmap/monster_dummy_2"
                android:scaleType="centerCrop"
                android:onClick="onClassicSelectionImage" />

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:id="@+id/classic_image_workout"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/classic_image_versus"
                android:layout_marginRight="50dp"
                android:stateListAnimator="@anim/elevation"
                android:background="@drawable/rounded_corners"
                android:src="@mipmap/journey_b0"
                android:scaleType="centerCrop"
                android:onClick="onClassicSelectionImage" />

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:id="@+id/classic_image_historical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/classic_image_versus"
                android:layout_marginLeft="50dp"
                android:stateListAnimator="@anim/elevation"
                android:background="@drawable/rounded_corners"
                android:src="@mipmap/quick_classic_detail_bg_0"
                android:scaleType="centerCrop"
                android:onClick="onClassicSelectionImage" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="VERSUS"
                android:fontFamily="sans-serif-light"
                android:id="@+id/textView8"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_below="@+id/classic_image_versus"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="HISTORICAL"
                android:fontFamily="sans-serif-light"
                android:id="@+id/textView9"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_below="@+id/classic_image_historical"
                android:layout_alignEnd="@+id/classic_image_historical"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="WORKOUT"
                android:fontFamily="sans-serif-light"
                android:id="@+id/textView12"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_below="@+id/classic_image_workout"
                android:layout_alignStart="@+id/classic_image_workout"
                android:layout_marginTop="15dp" />

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:onClick="classicOnBackPressed"
                    android:background="@drawable/ripple_round_soft_grey_to_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:clickable="false"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_backbutton"
                    android:tint="#9dffffff"
                    android:layout_gravity="center"
                    android:id="@+id/classic_back_button"/>
            </FrameLayout>
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>
