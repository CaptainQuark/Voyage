<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.thomas.voyage.CombatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:background="#bcbaff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:text="Monster Health"
                android:id="@+id/monsterHealthView"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/editText_"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#737ec9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/editTexxxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="#c1be78"
                android:onClick="activityCombatBackToMain"
                android:scaleType="center"
                android:src="@mipmap/ic_backbutton" />

            <GridView
                android:id="@+id/activity_combat_gridView_numbers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:numColumns="4"
                android:background="#303030" />

            <GridView
                android:id="@+id/activity_combat_gridView_specials"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:numColumns="2" />

            <TextView
                android:id="@+id/editTesdfxt_"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#47668d" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
