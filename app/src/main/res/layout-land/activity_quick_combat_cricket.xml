<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.thomas.voyage.QuickCombatCricket">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cricket_name_player_1"
                android:text="spieler 1"
                android:textColor="@android:color/black"
                android:textSize="34sp"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="40dp"
                android:gravity="center_vertical|bottom"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/cricket_score_player_1"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:fontFamily="sans-serif-light"
                android:paddingStart="40dp"
                android:gravity="start"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cricket_name_player_2"
                android:text="spieler 2"
                android:textColor="@android:color/black"
                android:textSize="34sp"
                android:fontFamily="sans-serif-light"
                android:paddingRight="40dp"
                android:gravity="end|bottom"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/cricket_score_player_2"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:fontFamily="sans-serif-light"
                android:paddingEnd="40dp"
                android:gravity="end"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <GridView
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="20dp"
            android:id="@+id/cricket_gridview"
            android:numColumns="auto_fit"
            android:columnWidth="260dp"
            android:stretchMode="spacingWidth"
            android:gravity="center"
            android:verticalSpacing="20dp"
            android:horizontalSpacing="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

</LinearLayout>
