<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    tools:context="com.example.thomas.voyage.Fragments.MonsterAllDataFragment">

    <android.support.v7.widget.CardView
        android:layout_margin="40dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/placeholder_dummy_0"
                android:foreground="@drawable/gradient90"
                android:id="@+id/frag_iv_monster_all_data_profile" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="50dp"
                android:paddingEnd="50dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnSpan="6"
                    android:layout_rowWeight="4"
                    android:layout_columnWeight="1"
                    android:gravity="bottom|center"
                    android:text="Monstername"
                    android:paddingBottom="70dp"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/frag_iv_monster_all_data_name"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="-2"
                    android:shadowDy="2"
                    android:shadowRadius="0.01"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="bottom|center"
                    android:text="Monstername"
                    android:textColor="@android:color/white"
                    android:id="@+id/frag_iv_monster_all_data_difficulty"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="bottom|center"
                    android:text="Monstername"
                    android:textColor="@android:color/white"
                    android:id="@+id/frag_iv_monster_all_data_checkout"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="bottom|center"
                    android:text="Monstername"
                    android:textColor="@android:color/white"
                    android:id="@+id/frag_iv_monster_all_data_hitpoints"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="bottom|center"
                    android:text="Monstername"
                    android:textColor="@android:color/white"
                    android:id="@+id/frag_iv_monster_all_data_dmg_max"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_column="4"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="bottom|center"
                    android:text="Monstername"
                    android:textColor="@android:color/white"
                    android:id="@+id/frag_iv_monster_all_data_dmg_min"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_column="5"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="bottom|center"
                    android:text="Monstername"
                    android:textColor="@android:color/white"
                    android:id="@+id/frag_iv_monster_all_data_block"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="top|center"
                    android:text="LEVEL"
                    android:textColor="#828282"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="top|center"
                    android:text="CHECKOUT"
                    android:textColor="#828282"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="top|center"
                    android:text="HP"
                    android:textColor="#828282"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="top|center"
                    android:text="MAX. DAMAGE"
                    android:textColor="#828282"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="top|center"
                    android:text="MIN. DAMAGE"
                    android:textColor="#828282"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="2"
                    android:layout_column="5"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="top|center"
                    android:text="BLOCK"
                    android:textColor="#828282"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="bottom|center"
                    android:text="Monstername"
                    android:id="@+id/frag_iv_monster_all_data_evasion"
                    android:textColor="@android:color/white"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="bottom|center"
                    android:text="Monstername"
                    android:id="@+id/frag_iv_monster_all_data_resistance"
                    android:textColor="@android:color/white"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="bottom|center"
                    android:text="Monstername"
                    android:id="@+id/frag_iv_monster_all_data_crit_multi"
                    android:textColor="@android:color/white"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="3"
                    android:layout_column="3"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="bottom|center"
                    android:text="Monstername"
                    android:id="@+id/frag_iv_monster_all_data_crit_chance"
                    android:textColor="@android:color/white"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="3"
                    android:layout_column="4"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="bottom|center"
                    android:text="Monstername"
                    android:id="@+id/frag_iv_monster_all_data_accuracy"
                    android:textColor="@android:color/white"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="3"
                    android:layout_column="5"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="bottom|center"
                    android:text="Monstername"
                    android:id="@+id/frag_iv_monster_all_data_bounty"
                    android:textColor="@android:color/white"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="top|center"
                    android:text="EVASION"
                    android:id="@+id/textView27"
                    android:textColor="#828282"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="top|center"
                    android:text="RESISTANCE"
                    android:id="@+id/textView29"
                    android:textColor="#828282"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="4"
                    android:layout_column="2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="top|center"
                    android:text="CRIT-MULTI"
                    android:id="@+id/textView30"
                    android:textColor="#828282"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="4"
                    android:layout_column="3"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="top|center"
                    android:text="CRIT-CHANCE"
                    android:id="@+id/textView31"
                    android:textColor="#828282"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="4"
                    android:layout_column="4"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="top|center"
                    android:text="ACCURACY"
                    android:id="@+id/textView32"
                    android:textColor="#828282"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="4"
                    android:layout_column="5"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:gravity="top|center"
                    android:text="BOUNTY"
                    android:id="@+id/textView33"
                    android:textColor="#828282"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </GridLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
