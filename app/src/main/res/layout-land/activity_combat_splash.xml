<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.thomas.voyage.CombatActivities.CombatSplashActivity">

    <FrameLayout
        android:id="@+id/layout_com_splash_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/journey_b6"
            android:id="@+id/imageview_com_splash_background" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="300dp"
            android:src="@drawable/gradient90"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:elevation="10dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/darker_gray">

                <ImageView
                    android:id="@+id/imageview_com_splash_monster"
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:scaleX="1"
                    android:layout_marginBottom="150dp"
                    android:layout_gravity="top|center_horizontal"
                    android:onClick="onClick"
                    android:src="@mipmap/placeholder_dummy_0"/>

                <TextView
                    android:id="@+id/textview_com_splash_monster_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="Monstername"
                    android:textColor="@android:color/black"
                    android:textSize="26sp"
                    android:layout_marginBottom="100dp"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="70dp"
                    android:text="Kurzbeschreibung"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/textview_com_splash_monster_des" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:columnCount="2"
                    android:rowCount="1">

                    <TextView
                        android:id="@+id/textview_com_splash_retreat"
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_gravity="center|bottom"
                        android:background="@drawable/ripple_grey_to_red"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:text="RÜCKZUG"
                        android:textColor="@color/material_grey_900" />

                    <TextView
                        android:id="@+id/textview_com_splash_start_combat"
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_gravity="center|bottom"
                        android:layout_rowWeight="1"
                        android:background="@drawable/ripple_grey_to_red"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:text="KÄMPFEN"
                        android:textColor="@color/material_grey_900" />
                </GridLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </FrameLayout>
</RelativeLayout>
