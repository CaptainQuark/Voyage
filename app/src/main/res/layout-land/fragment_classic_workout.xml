<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thomas.voyage.Fragments.ClassicWorkoutFragment"
    android:background="@color/soft_gray_background">

    <TextView
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"
        android:textSize="60sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="501"
        android:id="@+id/workout_points_left_to_hit"
        android:gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:gravity="bottom|center_horizontal"
                    android:textColor="#767676"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:text="EVERY OUT"
                    android:id="@+id/workout_mode_name"
                    android:layout_gravity="bottom"
                    android:fontFamily="sans-serif-light" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">


                <TextView
                    android:gravity="center_horizontal"
                    android:textColor="#767676"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="11sp"
                    android:text="MODUS"
                    android:id="@+id/workout_mode_static_view"
                    android:textStyle="bold" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:gravity="bottom|center_horizontal"
                    android:textColor="#010101"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text=""
                    android:id="@+id/workout_first_hit"
                    android:layout_gravity="bottom"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:gravity="bottom|center_horizontal"
                    android:textColor="#010101"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text=""
                    android:id="@+id/workout_second_hit"
                    android:layout_marginStart="39dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:gravity="bottom|center_horizontal"
                    android:textColor="#010101"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text=""
                    android:id="@+id/workout_third_hit"
                    android:layout_marginStart="39dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="sans-serif-light" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">


                <TextView
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:text="1. WURF"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:text="2. WURF"
                    android:layout_marginStart="39dp"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:text="3. WURF"
                    android:layout_marginStart="39dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:gravity="bottom|center_horizontal"
                    android:textColor="#767676"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:text="1 / 7"
                    android:id="@+id/workout_round_time_view"
                    android:layout_gravity="bottom"
                    android:fontFamily="sans-serif-light" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">


                <TextView
                    android:gravity="center_horizontal"
                    android:textColor="#767676"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="11sp"
                    android:text="RUNDE"
                    android:id="@+id/workout_round_time_static_view"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <FrameLayout
        android:clickable="true"
        android:onClick="toggleStatsVisability"
        android:id="@+id/classic_workout_framelayout_stats_in_detail"
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

        <GridView
            android:clickable="false"
            android:visibility="invisible"
            android:id="@+id/classic_workout_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="auto_fit"
            android:columnWidth="160dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:verticalSpacing="0dp"
            android:horizontalSpacing="0dp"/>
        <!-- android:paddingBottom="35dp" -->

        <TextView
            android:id="@+id/quick_classic_textview_hide_stats"
            android:text="AUSBLENDEN"
            android:textSize="10sp"
            android:paddingBottom="30dp"
            android:gravity="center_horizontal|bottom"
            android:layout_gravity="start|bottom"
            android:textColor="@android:color/darker_gray"
            android:layout_width="100dp"
            android:layout_height="200dp" />

        <TextView
            android:background="@color/soft_gray_background"
            android:id="@+id/quick_classic_textview_show_stats"
            android:text="STATISTIKEN EINBLENDEN"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>



</LinearLayout>
