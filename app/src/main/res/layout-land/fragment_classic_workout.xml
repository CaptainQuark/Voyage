<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thomas.voyage.Fragments.ClassicWorkoutFragment"
    android:background="@color/soft_gray_background">

    <TextView
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"
        android:textSize="100sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="501"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="90dp"
        android:id="@+id/workout_points_left_to_hit" />

    <TextView
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="25"
        android:id="@+id/workout_first_hit"
        android:layout_below="@+id/workout_points_left_to_hit"
        android:layout_alignStart="@+id/workout_points_left_to_hit" />

    <TextView
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="25"
        android:id="@+id/workout_second_hit"
        android:layout_left="@+id/workout_first_hit"
        android:layout_below="@+id/workout_points_left_to_hit"
        android:layout_toEndOf="@+id/workout_first_hit"
        android:layout_marginStart="39dp" />

    <TextView
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="25"
        android:id="@+id/textView16"
        android:layout_left="@+id/workout_first_hit"
        android:layout_below="@+id/workout_points_left_to_hit"
        android:layout_toEndOf="@+id/workout_second_hit"
        android:layout_marginStart="39dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"></GridLayout>

</RelativeLayout>
