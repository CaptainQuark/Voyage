<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thomas.voyage.Fragments.ClassicWorkoutFragment"
    android:background="@color/soft_gray_background">

    <TextView
        android:layout_weight="1.2"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"
        android:textSize="90sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="501"
        android:id="@+id/workout_points_left_to_hit"
        android:gravity="center"/>

    <GridLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="250dp">

        <TextView
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="0"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="25"
            android:id="@+id/workout_first_hit"
            android:layout_below="@+id/workout_points_left_to_hit"
            android:layout_alignStart="@+id/workout_points_left_to_hit"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="0"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="25"
            android:id="@+id/workout_second_hit"
            android:layout_left="@+id/workout_first_hit"
            android:layout_below="@+id/workout_points_left_to_hit"
            android:layout_toEndOf="@+id/workout_first_hit"
            android:layout_marginStart="39dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_row="0"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="25"
            android:id="@+id/textView16"
            android:layout_left="@+id/workout_first_hit"
            android:layout_below="@+id/workout_points_left_to_hit"
            android:layout_toEndOf="@+id/workout_second_hit"
            android:layout_marginStart="39dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-light" />




        <TextView
            android:gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="1"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="1. WURF"
            android:id="@+id/workout_first_hitasd"
            android:layout_below="@+id/workout_points_left_to_hit"
            android:layout_alignStart="@+id/workout_points_left_to_hit"
            android:textStyle="bold" />

        <TextView
            android:gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="1"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="2. WURF"
            android:id="@+id/workout_second_hitasd"
            android:layout_left="@+id/workout_first_hit"
            android:layout_below="@+id/workout_points_left_to_hit"
            android:layout_toEndOf="@+id/workout_first_hit"
            android:layout_marginStart="39dp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_row="1"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="3. WURF"
            android:id="@+id/textView16aaa"
            android:layout_left="@+id/workout_first_hit"
            android:layout_below="@+id/workout_points_left_to_hit"
            android:layout_toEndOf="@+id/workout_second_hit"
            android:layout_marginStart="39dp"
            android:textStyle="bold" />


    </GridLayout>



    <GridView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"/>

</LinearLayout>
