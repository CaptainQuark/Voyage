<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicActivities.HospitalActivity"
    android:orientation="vertical"
    android:background="#5f5f5f">

    <GridLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:background="@drawable/gradient_hospital_grey_to_white_90">

        <FrameLayout
            android:layout_width="@dimen/hospital_hero_width"
            android:layout_height="350dp"
            android:background="@android:color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="bottom|center"
            android:stateListAnimator="@anim/elevation_heroes_camp_card"
            android:layout_marginBottom="20dp"
            android:id="@+id/framelayout_hospital_slot_0"
            android:onClick="onClick">

            <ImageView
                android:id="@+id/imageview_hospital_hero_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/journey_b3"
                android:cropToPadding="false"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient90"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"/>

                <TextView
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="100 / 150"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="#ffffff"
                    android:id="@+id/textview_hospital_hero_hp_0"
                    android:layout_weight="1" />

                <TextView
                    android:textAllCaps="true"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="HITPOINTS"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:id="@+id/static_textview_hospital_hp_0" />

                <TextView
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="150"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="#ffffff"
                    android:id="@+id/textview_hospital_hero_time_0"
                    android:layout_weight="1" />

                <TextView
                    android:textAllCaps="true"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="ABREISE IN MIN"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/static_textview_hospital_time_0" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="@dimen/hospital_hero_width"
            android:layout_height="350dp"
            android:background="@android:color/black"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="bottom|center"
            android:stateListAnimator="@anim/elevation_heroes_camp_card"
            android:layout_marginBottom="20dp"
            android:id="@+id/framelayout_hospital_slot_1"
            android:onClick="onClick">

            <ImageView
                android:id="@+id/imageview_hospital_hero_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/journey_b3"
                android:cropToPadding="false"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient90"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"/>

                <TextView
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="100 / 150"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="#ffffff"
                    android:id="@+id/textview_hospital_hero_hp_1"
                    android:layout_weight="1" />

                <TextView
                    android:textAllCaps="true"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="HITPOINTS"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:id="@+id/static_textview_hospital_hp_1" />

                <TextView
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="150"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="#ffffff"
                    android:id="@+id/textview_hospital_hero_time_1"
                    android:layout_weight="1" />

                <TextView
                    android:textAllCaps="true"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="ABREISE IN MIN"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/static_textview_hospital_time_1" />

            </LinearLayout>

        </FrameLayout>


        <FrameLayout
            android:layout_width="@dimen/hospital_hero_width"
            android:layout_height="350dp"
            android:background="@android:color/black"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="bottom|center"
            android:stateListAnimator="@anim/elevation_heroes_camp_card"
            android:layout_marginBottom="20dp"
            android:id="@+id/framelayout_hospital_slot_2"
            android:onClick="onClick">

            <ImageView
                android:id="@+id/imageview_hospital_hero_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/journey_b3"
                android:cropToPadding="false"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient90"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"/>

                <TextView
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="100 / 150"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="#ffffff"
                    android:id="@+id/textview_hospital_hero_hp_2"
                    android:layout_weight="1" />

                <TextView
                    android:textAllCaps="true"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="HITPOINTS"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:id="@+id/static_textview_hospital_hp_2" />

                <TextView
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="150"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="#ffffff"
                    android:id="@+id/textview_hospital_hero_time_2"
                    android:layout_weight="1" />

                <TextView
                    android:textAllCaps="true"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="ABREISE IN MIN"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/static_textview_hospital_time_2" />

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/textview_hospital_hero_name_0"
            android:textAllCaps="true"
            android:layout_gravity="top|center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="Heldenname"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/textview_hospital_hero_name_1"
            android:textAllCaps="true"
            android:layout_gravity="top|center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="Heldenname"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/textview_hospital_hero_name_2"
            android:textAllCaps="true"
            android:layout_gravity="top|center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="Heldenname"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"
            android:textIsSelectable="false" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:longClickable="false">

        <ImageButton
            android:id="@+id/imagebutton_hospital_back_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_backbutton"
            android:tint="#ffffff"
            android:onClick="onClick"
            android:background="@drawable/ripple_backbutton_hospital" />

        <TextView
            android:id="@+id/textview_hospital_back_to_camp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Gilde"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:background="#b4b4b4"
            android:onClick="onClick"/>

        <TextView
            android:onClick="onClick"
            android:id="@+id/textview_hospital_abort_medication"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Heilung abbrechen"
            android:textColor="#707070"
            android:textSize="15sp"
            android:background="#b4b4b4" />

        <TextView
            android:id="@+id/textview_hospital_slots"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3 / 3"
            android:textColor="#707070"
            android:textSize="15sp"
            android:background="#b4b4b4" />

        <TextView
            android:id="@+id/textview_hospital_fortune"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="$ 1000"
            android:textColor="#707070"
            android:textSize="15sp"
            android:layout_marginRight="0dp"
            android:background="#b4b4b4" />

    </LinearLayout>
</LinearLayout>
