<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
    </style>

    <style name="VoyageDark" parent="android:Theme.Material.NoActionBar.Fullscreen">
    </style>

    <style name="ButtonToolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:text">BUTTON</item>
        <item name="android:textColor">@color/button_text_inactive</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ButtonToolbar.Selectable">
        <item name="android:background">@drawable/ripple_app_background_standard</item>
    </style>

    <style name="ButtonToolbar.BackButton">
        <item name="android:background">@drawable/ripple_app_background_standard</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@mipmap/ic_backbutton</item>
        <item name="android:tint">#ffffffff</item>
    </style>

</resources>
